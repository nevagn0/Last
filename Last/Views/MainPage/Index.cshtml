@{
    ViewData["Title"] = "Главная страница";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>

    <div class="container">
        <h1>Добро пожаловать в нашу ветклинику!</h1>

        <div class="text-center">
            <a asp-controller="AddAnimal" asp-action="Index" class="btn btn-pulse btn-icon">
                <i class="fas fa-paw"></i> Добавить животное
            </a>
            <a asp-controller="ListAnimal" asp-action="Index" class="btn btn-pulse btn-icon">
                <i class="fas fa-list"></i> Список животных
            </a>
            <a asp-controller="AddPasport" asp-action="Index" class="btn btn-pulse btn-icon">
                <i class="fas fa-passport"></i> Добавить паспорт
            </a>
            <a asp-controller="Vaccine" asp-action="AddVaccineToPassport" class="btn btn-pulse btn-icon">
                <i class="fas fa-syringe"></i> Добавить вакцину в паспорт
            </a>
            <a asp-controller="Record" asp-action="Create" class="btn btn-pulse btn-icon">
                <i class="fas fa-calendar-check"></i> Записаться в ветклинику
            </a>
            <a asp-controller="Record" asp-action="ViewComments" class="btn btn-pulse btn-icon">
                <i class="fas fa-comments"></i> Комментарии о ветклинике
            </a>
            <a asp-controller="UserRecords" asp-action="Index" class="btn btn-pulse btn-icon">
                <i class="fas fa-clipboard-list"></i> Мои Записи
            </a>
        </div>
    </div>
</body>
</html>