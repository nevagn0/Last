@model Last.Models.Record

@{
    ViewData["Title"] = "Удаление записи";
}

<h2>Удаление записи</h2>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Ветклиника: @Model.Vetclin?.Adress</h4>
    <p>Комментарий: @Model.Com</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    <div>
        <button onclick="window.history.back()" class="btn btn-secondary">Назад</button>
    </div>
</form>