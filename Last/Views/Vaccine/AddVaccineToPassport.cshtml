@model Last.Models.Passport

@{
    ViewData["Title"] = "Добавить вакцину в паспорт";
}

<h2>Добавить вакцину в паспорт</h2>

<form asp-action="AddVaccineToPassport" method="post">
    <div class="form-group">
        <label for="passportId">Выберите паспорт:</label>
        <select class="form-control" id="passportId" name="passportId">
            @foreach (var passport in ViewBag.Passports)
            {
                <option value="@passport.Value">@passport.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="selectedVacins">Выберите вакцины:</label>
        <select name="selectedVacins" class="form-control" multiple>
            @foreach (var vacin in ViewBag.Vacins)
            {
                <option value="@vacin.Value">@vacin.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
    <div>
        <button onclick="window.history.back()" class="btn btn-secondary">Назад</button>
    </div>
</form>