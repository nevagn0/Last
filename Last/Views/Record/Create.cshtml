@model Last.Models.Record

@{
    ViewData["Title"] = "Запись в ветклинику";
}

<h2>Запись в ветклинику</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Vetclinid">Выберите ветклинику:</label>
        <select class="form-control" id="Vetclinid" name="Vetclinid" required>
            @foreach (var clinic in ViewBag.VetClinics)
            {
                <option value="@clinic.Value">@clinic.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Com">Симптомы:</label>
        <textarea class="form-control" id="Com" name="Com" rows="3" maxlength="500"></textarea>
        <small class="form-text text-muted">Максимум 500 символов.</small>
    </div>

    <button type="submit" class="btn btn-primary">Записаться</button>

    <div>
        <button onclick="window.history.back()" class="btn btn-secondary">Назад</button>
    </div>
</form>
